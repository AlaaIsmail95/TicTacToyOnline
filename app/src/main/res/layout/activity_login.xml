<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_name" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Enter Your Email" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.503"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/et_password" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/et_name" app:layout_constraintHorizontal_bias="0.502"
            android:hint="Enter Your Password"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/bu_login" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/et_password" android:onClick="buLoginEvent"
            app:layout_constraintHorizontal_bias="0.287"/>
    <Button
            android:text="sign up"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:id="@+id/bu_signup" app:layout_constraintStart_toEndOf="@+id/bu_login"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/et_password"
            app:layout_constraintHorizontal_bias="0.559" android:onClick="buSignUpEvent"/>
</android.support.constraint.ConstraintLayout>